---
interface Props {
  activePage?: 'home' | 'trips' | 'profile';
}

const { activePage = 'home' } = Astro.props;

const getClasses = (page: string) => 
  activePage === page 
    ? "text-ocean-600 font-bold" 
    : "text-ocean-300 font-medium hover:text-ocean-500";
---

<nav class="fixed bottom-0 w-full bg-white border-t border-ocean-100 pb-2 pt-2 px-6 z-50 rounded-t-2xl shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)]">
  <div class="flex justify-around items-center">
    
    <a href="/dashboard/dashboard" class={`flex flex-col items-center gap-1 p-2 transition ${getClasses('home')}`}>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill={activePage === 'home' ? "currentColor" : "none"} viewBox="0 0 24 24" stroke="currentColor" stroke-width={activePage === 'home' ? "0" : "2"}>
         {activePage === 'home' 
           ? <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
           : <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
         }
      </svg>
      <span class="text-[10px]">Inicio</span>
    </a>

    <a href="/trips/index.html" class={`flex flex-col items-center gap-1 p-2 transition ${getClasses('trips')}`}>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="text-[10px]">Viajes</span>
    </a>

    <a href="/settings/profile/index.html" class={`flex flex-col items-center gap-1 p-2 transition ${getClasses('profile')}`}>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill={activePage === 'profile' ? "currentColor" : "none"} viewBox="0 0 24 24" stroke="currentColor" stroke-width={activePage === 'profile' ? "0" : "2"}>
        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      <span class="text-[10px]">Perfil</span>
    </a>

  </div>
</nav>