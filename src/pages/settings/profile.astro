---
import Layout from "../../layouts/BaseLayout.astro";
---

<Layout title="Mi Perfil - TravelIA">
  <div
    class="min-h-screen bg-ocean-50 dark:bg-slate-900 relative transition-colors duration-300"
  >
    <header
      class="bg-white dark:bg-slate-800 px-6 pt-12 pb-4 shadow-sm sticky top-0 z-10 flex items-center gap-4 transition-colors"
    >
      <a
        href="/dashboard/dashboard/index.html"
        class="p-2 -ml-2 text-ocean-600 dark:text-ocean-400 hover:bg-ocean-50 dark:hover:bg-slate-700 rounded-full transition"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15 19l-7-7 7-7"></path>
        </svg>
      </a>
      <h1 class="text-xl font-bold text-ocean-900 dark:text-white">
        Mi Perfil
      </h1>
    </header>

    <main class="p-6 space-y-6">
      <section
        class="bg-white dark:bg-slate-800 rounded-3xl p-6 shadow-sm shadow-ocean-100 dark:shadow-none flex flex-col items-center text-center border border-ocean-50 dark:border-slate-700 transition-colors"
      >
        <div class="relative mb-4">
          <div
            class="w-24 h-24 rounded-full bg-ocean-100 dark:bg-slate-700 border-4 border-white dark:border-slate-600 shadow-md overflow-hidden relative"
          >
            <img
              id="profile-image"
              alt="Avatar"
              class="w-full h-full object-cover opacity-0 transition-opacity duration-500"
            />
          </div>
          <button
            class="absolute bottom-0 right-0 bg-ocean-600 text-white p-2 rounded-full hover:bg-ocean-700 transition shadow-sm"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
              ></path></svg
            >
          </button>
        </div>

        <h2
          id="profile-name"
          class="text-xl font-bold text-ocean-900 dark:text-white animate-pulse"
        >
          Cargando...
        </h2>
        <p
          id="profile-email"
          class="text-sm text-ocean-400 dark:text-slate-400 animate-pulse"
        >
          ...
        </p>
      </section>

      <section class="space-y-3">
        <h3
          class="text-xs font-bold text-ocean-400 dark:text-slate-400 uppercase tracking-wider ml-2"
        >
          Cuenta
        </h3>

        <a
          href="/settings/modify-profile-data/index.html"
          class="w-full bg-white dark:bg-slate-800 p-4 rounded-2xl shadow-sm flex items-center justify-between group active:scale-[0.98] transition-colors border border-transparent dark:border-slate-700"
        >
          <div class="flex items-center gap-4">
            <div
              class="bg-ocean-50 dark:bg-slate-700 p-2 rounded-lg text-ocean-600 dark:text-ocean-400"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                ></path>
              </svg>
            </div>
            <span class="text-ocean-800 dark:text-slate-200 font-medium"
              >Datos Personales</span
            >
          </div>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-ocean-300 dark:text-slate-600 group-hover:text-ocean-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>

        <a
          href="/settings/config/index.html"
          class="w-full bg-white dark:bg-slate-800 p-4 rounded-2xl shadow-sm flex items-center justify-between group active:scale-[0.98] transition-colors border border-transparent dark:border-slate-700"
        >
          <div class="flex items-center gap-4">
            <div
              class="bg-ocean-50 dark:bg-slate-700 p-2 rounded-lg text-ocean-600 dark:text-ocean-400"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <span class="text-ocean-800 dark:text-slate-200 font-medium"
              >Configuraci贸n</span
            >
          </div>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-ocean-300 dark:text-slate-600 group-hover:text-ocean-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </section>

      <section class="pt-4">
        <button
          id="logoutBtn"
          class="w-full border border-red-200 bg-red-50 text-red-600 font-bold py-3 rounded-xl hover:bg-red-100 active:scale-[0.98] transition flex items-center justify-center gap-2"
        >
          Cerrar Sesi贸n
        </button>
      </section>
    </main>
  </div>

  <script>
    import { Capacitor } from "@capacitor/core";
    import { GoogleAuth } from "@codetrix-studio/capacitor-google-auth";
    import { logout, getProfile } from "../../services/api/authAPI";

    function getCookie(name: string): string | null {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop()?.split(";").shift() || null;
      return null;
    }

    async function loadProfileData() {
      const token = getCookie("authToken");
      if (!token) return;

      try {
        const user = await getProfile(token);

        const nameEl = document.getElementById("profile-name");
        const emailEl = document.getElementById("profile-email");
        const imgEl = document.getElementById(
          "profile-image"
        ) as HTMLImageElement;

        if (nameEl && user.username) {
          nameEl.innerText = user.username;
          nameEl.classList.remove("animate-pulse");
        }
        if (emailEl && user.email) {
          emailEl.innerText = user.email;
          emailEl.classList.remove("animate-pulse");
        }

        if (imgEl) {
          const fallbackUrl = "/default-penguin.png";

          imgEl.onload = () => {
            imgEl.classList.remove("opacity-0");
          };

          imgEl.onerror = () => {
            if (imgEl.src !== window.location.origin + fallbackUrl) {
              imgEl.src = fallbackUrl;
            }
          };

          if (user.profile_picture) {
            imgEl.src = user.profile_picture;
          } else {
            imgEl.src = fallbackUrl;
          }
        }
      } catch (e) {
        console.error("Error al cargar perfil:", e);
      }
    }

    loadProfileData();

    const logoutBtn = document.getElementById("logoutBtn");

    if (logoutBtn) {
      logoutBtn.addEventListener("click", async () => {
        logoutBtn.innerHTML = `<span class="animate-pulse">Cerrando sesi贸n...</span>`;

        (logoutBtn as HTMLButtonElement).disabled = true;

        const accessToken = getCookie("authToken");

        const refreshToken = getCookie("refreshToken");

        if (accessToken && refreshToken) {
          console.log("Cerrando sesi贸n en servidor...");

          await logout(accessToken, refreshToken);
        }

        if (Capacitor.isNativePlatform()) {
          try {
            GoogleAuth.initialize({
              clientId:
                "360414482088-rtp2h0ao33g08ovo4fa2q6rk0c2n1aos.apps.googleusercontent.com",

              scopes: ["profile", "email"],

              grantOfflineAccess: true,
            });

            await GoogleAuth.signOut();
          } catch (e) {
            console.error("Error logout nativo:", e);
          }
        }

        document.cookie =
          "authToken=; path=/; max-age=0; secure; samesite=strict";

        document.cookie =
          "refreshToken=; path=/; max-age=0; secure; samesite=strict";

        window.location.href = "/login/index.html";
      });
    }
  </script>
</Layout>
