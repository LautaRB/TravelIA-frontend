---
import Layout from "../../layouts/BaseLayout.astro";
---

<Layout title="Cambiar Contraseña - TravelIA">
  <div class="min-h-screen bg-ocean-50 dark:bg-slate-900 relative transition-colors duration-300">
    
    <header class="bg-white dark:bg-slate-800 px-6 pt-12 pb-4 shadow-sm sticky top-0 z-10 flex items-center gap-4 transition-colors">
      <a href="/settings/config/index.html" class="p-2 -ml-2 text-ocean-600 dark:text-ocean-400 hover:bg-ocean-50 dark:hover:bg-slate-700 rounded-full transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
      </a>
      <h1 class="text-xl font-bold text-ocean-900 dark:text-white">Cambiar Contraseña</h1>
    </header>

    <main class="p-6">
      <div class="bg-white dark:bg-slate-800 rounded-3xl p-6 shadow-sm border border-ocean-50 dark:border-slate-700 transition-colors">
        
        <div class="flex justify-center mb-6">
          <div class="bg-ocean-50 dark:bg-slate-700 p-4 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-ocean-500 dark:text-ocean-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
        </div>

        <form id="changePassForm" class="space-y-4">
          
          <div>
            <label class="block text-xs font-bold text-ocean-400 dark:text-slate-400 uppercase tracking-wider mb-1 ml-1">Nueva contraseña</label>
            <div class="relative">
              <input
                id="new_password"
                type="password"
                placeholder="••••••••"
                class="w-full px-4 py-3 border border-ocean-200 dark:border-slate-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-ocean-500 bg-white dark:bg-slate-900 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-slate-500 transition-colors pr-10"
                required
                minlength="6"
              />
              <button type="button" id="toggleNew" class="absolute right-3 top-1/2 -translate-y-1/2 text-ocean-400 dark:text-slate-400 hover:text-ocean-600 dark:hover:text-white transition-colors">
                 <svg class="h-5 w-5 icon-open" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                 <svg class="h-5 w-5 icon-closed hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" /></svg>
              </button>
            </div>
          </div>

          <div>
            <label class="block text-xs font-bold text-ocean-400 dark:text-slate-400 uppercase tracking-wider mb-1 ml-1">Confirmar contraseña</label>
            <div class="relative">
              <input
                id="confirm_password"
                type="password"
                placeholder="••••••••"
                class="w-full px-4 py-3 border border-ocean-200 dark:border-slate-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-ocean-500 bg-white dark:bg-slate-900 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-slate-500 transition-colors pr-10"
                required
                minlength="6"
              />
              <button type="button" id="toggleConfirm" class="absolute right-3 top-1/2 -translate-y-1/2 text-ocean-400 dark:text-slate-400 hover:text-ocean-600 dark:hover:text-white transition-colors">
                 <svg class="h-5 w-5 icon-open" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                 <svg class="h-5 w-5 icon-closed hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" /></svg>
              </button>
            </div>
            <p id="error-msg" class="text-red-500 text-xs mt-2 hidden ml-1">Las contraseñas no coinciden</p>
          </div>

          <div class="pt-4">
            <button
              id="submitBtn"
              type="submit"
              class="w-full bg-ocean-600 hover:bg-ocean-700 text-white font-bold py-3 rounded-xl transition shadow-lg shadow-ocean-200 dark:shadow-none"
            >
              Actualizar Contraseña
            </button>
          </div>

        </form>
      </div>
    </main>
  </div>
</Layout>

<script>
  import { updateProfile } from "../../services/api/authAPI";

  function getCookie(name: string): string | null {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop()?.split(';').shift() || null;
      return null;
  }

  function setupToggle(btnId: string, inputId: string) {
    const btn = document.getElementById(btnId);
    const input = document.getElementById(inputId) as HTMLInputElement;
    if(!btn || !input) return;

    const iconOpen = btn.querySelector('.icon-open');
    const iconClosed = btn.querySelector('.icon-closed');

    btn.addEventListener('click', () => {
        const isPass = input.type === 'password';
        input.type = isPass ? 'text' : 'password';
        if(isPass) {
            iconOpen?.classList.add('hidden');
            iconClosed?.classList.remove('hidden');
        } else {
            iconOpen?.classList.remove('hidden');
            iconClosed?.classList.add('hidden');
        }
    });
  }

  setupToggle('toggleNew', 'new_password');
  setupToggle('toggleConfirm', 'confirm_password');

  const form = document.getElementById('changePassForm');
  const pass1 = document.getElementById('new_password') as HTMLInputElement;
  const pass2 = document.getElementById('confirm_password') as HTMLInputElement;
  const errorMsg = document.getElementById('error-msg');
  const btn = document.getElementById('submitBtn') as HTMLButtonElement;

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      if (pass1.value !== pass2.value) {
        errorMsg?.classList.remove('hidden');
        pass2.classList.add('border-red-500', 'focus:ring-red-500');
        return;
      } else {
        errorMsg?.classList.add('hidden');
        pass2.classList.remove('border-red-500', 'focus:ring-red-500');
      }

      const originalText = btn.innerText;
      btn.disabled = true;
      btn.innerHTML = `<span class="animate-pulse">Actualizando...</span>`;

      try {
        const token = getCookie('authToken');
        if (!token) throw new Error("No hay sesión activa");

        await updateProfile(token, { 
          password: pass1.value 
        });

        alert("¡Contraseña actualizada con éxito!");
        window.location.href = "/settings/config/index.html";

      } catch (error: any) {
        alert("Error: " + error.message);
        btn.disabled = false;
        btn.innerText = originalText;
      }
    });

    pass2?.addEventListener('input', () => {
       errorMsg?.classList.add('hidden');
       pass2.classList.remove('border-red-500');
    });
  }
</script>