---
import Layout from "../../layouts/BaseLayout.astro";
---

<Layout title="Cambiar Contraseña - TravelIA">
  <div class="min-h-screen bg-ocean-50 dark:bg-slate-900 relative transition-colors duration-300">
    
    <header class="bg-white dark:bg-slate-800 px-6 pt-12 pb-4 shadow-sm sticky top-0 z-10 flex items-center gap-4 transition-colors">
      <a href="/settings/config/index.html" class="p-2 -ml-2 text-ocean-600 dark:text-ocean-400 hover:bg-ocean-50 dark:hover:bg-slate-700 rounded-full transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
      </a>
      <h1 class="text-xl font-bold text-ocean-900 dark:text-white">Cambiar Contraseña</h1>
    </header>

    <main class="p-6">
      <div class="bg-white dark:bg-slate-800 rounded-3xl p-6 shadow-sm border border-ocean-50 dark:border-slate-700 transition-colors">
        
        <div class="flex justify-center mb-6">
          <div class="bg-ocean-50 dark:bg-slate-700 p-4 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-ocean-500 dark:text-ocean-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
        </div>

        <form id="changePassForm" class="space-y-4">
          
          <div>
            <label class="block text-xs font-bold text-ocean-400 dark:text-slate-400 uppercase tracking-wider mb-1 ml-1">Nueva contraseña</label>
            <input
              id="new_password"
              type="password"
              placeholder="••••••••"
              class="w-full px-4 py-3 border border-ocean-200 dark:border-slate-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-ocean-500 bg-white dark:bg-slate-900 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-slate-500 transition-colors"
              required
              minlength="6"
            />
          </div>

          <div>
            <label class="block text-xs font-bold text-ocean-400 dark:text-slate-400 uppercase tracking-wider mb-1 ml-1">Confirmar contraseña</label>
            <input
              id="confirm_password"
              type="password"
              placeholder="••••••••"
              class="w-full px-4 py-3 border border-ocean-200 dark:border-slate-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-ocean-500 bg-white dark:bg-slate-900 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-slate-500 transition-colors"
              required
              minlength="6"
            />
            <p id="error-msg" class="text-red-500 text-xs mt-2 hidden ml-1">Las contraseñas no coinciden</p>
          </div>

          <div class="pt-4">
            <button
              id="submitBtn"
              type="submit"
              class="w-full bg-ocean-600 hover:bg-ocean-700 text-white font-bold py-3 rounded-xl transition shadow-lg shadow-ocean-200 dark:shadow-none"
            >
              Actualizar Contraseña
            </button>
          </div>

        </form>
      </div>
    </main>
  </div>
</Layout>

<script>
  import { updateProfile } from "../../services/api/authAPI";

  function getCookie(name: string): string | null {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop()?.split(';').shift() || null;
      return null;
  }

  const form = document.getElementById('changePassForm');
  const pass1 = document.getElementById('new_password') as HTMLInputElement;
  const pass2 = document.getElementById('confirm_password') as HTMLInputElement;
  const errorMsg = document.getElementById('error-msg');
  const btn = document.getElementById('submitBtn') as HTMLButtonElement;

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      if (pass1.value !== pass2.value) {
        errorMsg?.classList.remove('hidden');
        pass2.classList.add('border-red-500', 'focus:ring-red-500');
        return;
      } else {
        errorMsg?.classList.add('hidden');
        pass2.classList.remove('border-red-500', 'focus:ring-red-500');
      }

      const originalText = btn.innerText;
      btn.disabled = true;
      btn.innerHTML = `<span class="animate-pulse">Actualizando...</span>`;

      try {
        const token = getCookie('authToken');
        if (!token) throw new Error("No hay sesión activa");

        await updateProfile(token, { 
          password: pass1.value 
        });

        alert("¡Contraseña actualizada con éxito!");
        
        window.location.href = "/settings/config/index.html";

      } catch (error: any) {
        alert("Error: " + error.message);
        btn.disabled = false;
        btn.innerText = originalText;
      }
    });

    pass2?.addEventListener('input', () => {
       errorMsg?.classList.add('hidden');
       pass2.classList.remove('border-red-500');
    });
  }
</script>