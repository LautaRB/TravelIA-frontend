---
import Layout from "../layouts/BaseLayout.astro";
---

<Layout title="Iniciar Sesión - TravelIA">
  <div class="min-h-screen flex items-center justify-center bg-ocean-50 dark:bg-slate-900 p-4 transition-colors duration-300">
    
    <div class="w-full h-full max-w-md bg-white dark:bg-slate-800 shadow-lg rounded-xl p-8 space-y-6 transition-colors">
      <div class="flex justify-center">
        <img src="/logo.svg" alt="TravelIA Logo" class="w-20 h-20" />
      </div>

      <h1 class="text-2xl font-semibold text-center text-ocean-800 dark:text-white">
        Inicia sesión en TravelIA
      </h1>

      <form id="loginForm" class="space-y-4">
        <input
          id="username"
          type="text"
          placeholder="Usuario"
          class="w-full px-4 py-2 border border-ocean-200 dark:border-slate-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-ocean-500 bg-white dark:bg-slate-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-slate-400 transition-colors"
          required
        />

        <input
          id="password"
          type="password"
          placeholder="Contraseña"
          class="w-full px-4 py-2 border border-ocean-200 dark:border-slate-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-ocean-500 bg-white dark:bg-slate-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-slate-400 transition-colors"
          required
        />

        <button
          id="submitBtnLogin"
          type="submit"
          class="w-full bg-ocean-500 hover:bg-ocean-600 text-white py-2 rounded-lg font-medium transition"
        >
          Iniciar sesión
        </button>
      </form>

      <div class="flex items-center justify-center gap-4 text-ocean-400 dark:text-slate-500">
        <span class="flex-1 h-px bg-ocean-200 dark:bg-slate-600"></span>
        O
        <span class="flex-1 h-px bg-ocean-200 dark:bg-slate-600"></span>
      </div>

      <button
        id="googleLoginBtn"
        type="button"
        class="w-full flex items-center justify-center gap-3 border border-ocean-300 dark:border-slate-600 py-2 rounded-lg hover:bg-ocean-100 dark:hover:bg-slate-700 dark:text-slate-200 transition-colors"
      >
        <img src="/google-icon.svg" alt="Google" class="w-5 h-5" />
        Iniciar sesión con Google
      </button>

      <p class="text-center text-ocean-700 dark:text-slate-400">
        ¿No tenés una cuenta?
        <a
          href="/register/index.html"
          class="text-ocean-600 dark:text-ocean-400 font-medium hover:underline"
        >
          Registrate!
        </a>
      </p>
    </div>
  </div>
</Layout>

<script>
  import { Capacitor } from "@capacitor/core";
  import { GoogleAuth } from "@codetrix-studio/capacitor-google-auth";
  import { auth, provider } from "../services/firebase"; 
  import { signInWithPopup } from "firebase/auth";
  import { login, firebaseLogin } from "../services/api/authAPI";

  const isNative = Capacitor.isNativePlatform();

  GoogleAuth.initialize({
    clientId:
      "360414482088-rtp2h0ao33g08ovo4fa2q6rk0c2n1aos.apps.googleusercontent.com",
    scopes: ["profile", "email"],
    grantOfflineAccess: true,
  });

  function setLoadingState(buttonId: string, isLoading: boolean) {
    const button = document.getElementById(buttonId) as HTMLButtonElement;
    if (!button) return;

    if (isLoading) {
      button.dataset.originalContent = button.innerHTML;
      button.disabled = true;
      button.classList.add("opacity-75", "cursor-not-allowed");

      button.innerHTML = `
        <div class="flex items-center justify-center gap-2">
          <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span>Iniciando sesión...</span>
        </div>
      `;
    } else {
      button.disabled = false;
      button.classList.remove("opacity-75", "cursor-not-allowed");
      if (button.dataset.originalContent) {
        button.innerHTML = button.dataset.originalContent;
      }
    }
  }

  const googleBtn = document.getElementById("googleLoginBtn");

  if (googleBtn) {
    googleBtn.addEventListener("click", async () => {
      setLoadingState("googleLoginBtn", true);

      try {
        let idToken;

        if (isNative) {
          const user = await GoogleAuth.signIn();
          idToken = user.authentication.idToken;
        } else {
          const result = await signInWithPopup(auth, provider);
          idToken = await result.user.getIdToken();
        }

        const data = await firebaseLogin(idToken);
        const responseData = data as any;
        const accessToken = responseData.access || responseData.token;
        const refreshToken = responseData.refresh;

        if (!accessToken) throw new Error("No se recibió token de acceso");

        document.cookie = `authToken=${accessToken}; path=/; secure; samesite=strict; max-age=2592000`;

        if (refreshToken) {
          document.cookie = `refreshToken=${refreshToken}; path=/; secure; samesite=strict; max-age=2592000`;
        }

        window.location.href = "/dashboard/dashboard/index.html";
      } catch (e: any) {
        console.error("Error Login:", e);
        alert("Error: " + (e.message || JSON.stringify(e)));

        setLoadingState("googleLoginBtn", false);
      }
    });
  }

  const form = document.getElementById("loginForm");

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const usernameInput = document.getElementById(
        "username"
      ) as HTMLInputElement;
      const passwordInput = document.getElementById(
        "password"
      ) as HTMLInputElement;

      const submitBtn = form.querySelector('button[type="submit"]');
      if (submitBtn && !submitBtn.id) submitBtn.id = "submitBtnLogin";

      if (usernameInput && passwordInput && submitBtn) {
        setLoadingState(submitBtn.id, true);

        try {
          const data = await login(usernameInput.value, passwordInput.value);

          const responseData = data as any;
          const accessToken = responseData.access || responseData.token;
          const refreshToken = responseData.refresh;

          if (!accessToken) throw new Error("No se recibió token de acceso");

          document.cookie = `authToken=${accessToken}; path=/; secure; samesite=strict; max-age=2592000`;

          if (refreshToken) {
            document.cookie = `refreshToken=${refreshToken}; path=/; secure; samesite=strict; max-age=2592000`;
          }

          window.location.href = "/dashboard/dashboard/index.html";
        } catch (error: any) {
          alert("Error: " + error.message);
          setLoadingState(submitBtn.id, false);
        }
      }
    });
  }
</script>