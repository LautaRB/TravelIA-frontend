---
<header class="bg-white dark:bg-slate-800 px-6 pt-12 pb-4 shadow-sm rounded-b-3xl sticky top-0 z-10 transition-colors duration-300">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-ocean-900 dark:text-white">
        Hola, <span id="header-user-name" class="text-ocean-600 dark:text-ocean-400">...</span>! ðŸ‘‹
      </h1>
      <p class="text-sm text-ocean-400 dark:text-slate-400 mt-1">Â¿Listo para tu prÃ³xima aventura?</p>
    </div>
    
    <a href="/settings/profile/index.html" class="relative group">
      <div class="w-12 h-12 rounded-full bg-ocean-100 dark:bg-slate-700 border-2 border-ocean-200 dark:border-slate-600 overflow-hidden shadow-sm group-hover:border-ocean-400 transition-colors">
        <img 
          id="header-user-avatar"
          src="https://api.dicebear.com/7.x/avataaars/svg?seed=Loading" 
          alt="Perfil" 
          class="w-full h-full object-cover"
        />
      </div>
    </a>
  </div>
</header>

<script>
  import { getProfile } from "../../services/api/authAPI";

  function getCookie(name: string): string | null {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop()?.split(';').shift() || null;
      return null;
  }

  async function loadHeaderData() {
    const token = getCookie('authToken');
    if (!token) return;

    try {
      const user = await getProfile(token);
      
      const nameEl = document.getElementById('header-user-name');
      if (nameEl && user.username) {
        nameEl.innerText = user.username.charAt(0).toUpperCase() + user.username.slice(1);
      }

      const imgEl = document.getElementById('header-user-avatar') as HTMLImageElement;
      if (imgEl && user.profile_picture) {
        imgEl.src = user.profile_picture;
      }

    } catch (error) {
      console.error("Error cargando header:", error);
    }
  }

  loadHeaderData();
</script>