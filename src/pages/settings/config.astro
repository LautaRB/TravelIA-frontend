---
import Layout from "../../layouts/BaseLayout.astro";
---

<Layout title="Configuración - TravelIA">
  <div class="min-h-screen bg-ocean-50 dark:bg-slate-900 relative transition-colors duration-300">
    
    <header class="bg-white dark:bg-slate-800 px-6 pt-12 pb-4 shadow-sm sticky top-0 z-10 flex items-center gap-4 transition-colors">
      <a href="/settings/profile/index.html" class="p-2 -ml-2 text-ocean-600 dark:text-ocean-400 hover:bg-ocean-50 dark:hover:bg-slate-700 rounded-full transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
      </a>
      <h1 class="text-xl font-bold text-ocean-900 dark:text-white">Configuración</h1>
    </header>

    <main class="p-6 space-y-6">

      <section>
        <h2 class="text-xs font-bold text-ocean-400 dark:text-slate-400 uppercase tracking-wider ml-2 mb-2">Apariencia</h2>
        
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm overflow-hidden transition-colors">
          
          <div class="p-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="bg-ocean-50 dark:bg-slate-700 p-2 rounded-lg text-ocean-600 dark:text-ocean-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
              </div>
              <span class="text-ocean-900 dark:text-slate-200 font-medium">Tema</span>
            </div>
            
            <select id="theme-selector" class="bg-gray-50 dark:bg-slate-700 border border-gray-200 dark:border-slate-600 text-gray-700 dark:text-white text-sm rounded-lg focus:ring-ocean-500 focus:border-ocean-500 block p-2">
              <option value="system">Sistema</option>
              <option value="light">Claro</option>
              <option value="dark">Oscuro</option>
            </select>
          </div>

        </div>
      </section>

      <section>
        <h2 class="text-xs font-bold text-ocean-400 dark:text-slate-400 uppercase tracking-wider ml-2 mb-2">Preferencias de Viaje</h2>
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm overflow-hidden divide-y divide-gray-100 dark:divide-slate-700 transition-colors">
          
          <div class="p-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="bg-ocean-50 dark:bg-slate-700 p-2 rounded-lg text-ocean-600 dark:text-ocean-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-ocean-900 dark:text-slate-200 font-medium">Moneda</span>
            </div>
            <select class="bg-transparent text-ocean-500 dark:text-ocean-400 font-medium text-sm focus:outline-none text-right dark:bg-slate-800">
              <option value="USD">USD ($)</option>
              <option value="EUR">EUR (€)</option>
              <option value="ARS">ARS ($)</option>
            </select>
          </div>

          <div class="p-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="bg-ocean-50 dark:bg-slate-700 p-2 rounded-lg text-ocean-600 dark:text-ocean-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.806-.984A10.378 10.378 0 0015 6m0 13V6" />
                </svg>
              </div>
              <span class="text-ocean-900 dark:text-slate-200 font-medium">Distancia</span>
            </div>
            <select class="bg-transparent text-ocean-500 dark:text-ocean-400 font-medium text-sm focus:outline-none text-right dark:bg-slate-800">
              <option value="km">Kilómetros</option>
              <option value="mi">Millas</option>
            </select>
          </div>

        </div>
      </section>

      <section>
        <h2 class="text-xs font-bold text-ocean-400 dark:text-slate-400 uppercase tracking-wider ml-2 mb-2">Seguridad</h2>
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm overflow-hidden divide-y divide-gray-100 dark:divide-slate-700 transition-colors">
          
          <a href="/settings/change-password/index.html" class="w-full p-4 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-slate-700 transition text-left cursor-pointer">
            <div class="flex items-center gap-3">
              <div class="bg-ocean-50 dark:bg-slate-700 p-2 rounded-lg text-ocean-600 dark:text-ocean-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <span class="text-ocean-900 dark:text-slate-200 font-medium">Cambiar contraseña</span>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 dark:text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>

        </div>
      </section>

      <section>
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm overflow-hidden divide-y divide-gray-100 dark:divide-slate-700 transition-colors">
          <a href="#" class="w-full p-4 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-slate-700 transition">
            <span class="text-sm text-gray-600 dark:text-slate-300">Política de Privacidad</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 dark:text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
        <p class="text-center text-xs text-ocean-300 dark:text-slate-500 mt-4">TravelIA v1.0.0</p>
      </section>

    </main>
  </div>
</Layout>

<script>
  const themeSelector = document.getElementById('theme-selector') as HTMLSelectElement;
  
  if (themeSelector) {
    const savedTheme = localStorage.getItem('theme') || 'system';
    themeSelector.value = savedTheme;

    themeSelector.addEventListener('change', (e) => {
      const target = e.target as HTMLSelectElement;
      const newTheme = target.value;

      localStorage.setItem('theme', newTheme);

      if (
        newTheme === 'dark' || 
        (newTheme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    });
  }
</script>